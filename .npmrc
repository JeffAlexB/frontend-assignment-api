# Keep installs inert by default (blocks pre/postinstall scripts)
ignore-scripts=true

# Deterministic versions (avoid surprise semver bumps when adding deps)
save-exact=true

# Use the official registry explicitly
registry=https://registry.npmjs.org/

# Signal npm advisories; you can tune/disable in CI if too noisy
audit=true

# (Optional) less noise
fund=false
update-notifier=false